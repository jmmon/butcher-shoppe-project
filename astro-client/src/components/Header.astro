<style>
.main {
	background-color: var(--logo-red);
	display: flex;
	justify-content: center;
	width: 100vw;
	height: var(--header-height);
	position: fixed;
	z-index: 999;
}

.container {
	padding: 0 0.9rem 0 0rem;
	/* margin: auto; */
	/* padding: 0; */
	width: calc(100vw - 1rem);
	max-width: 1500px;
	font-size: clamp(0.6rem, 2.2vw, 1rem);

	grid-template-columns: repeat(4, 1fr);
}

.link {
	display: flex;
	justify-content: center;
	align-items: center;
	text-decoration: none;
	color: #fff;
	box-sizing: border-box;

	transition: var(--transition);
	height: 100%;
	gap: 0.5rem;
	padding-right: 8px;
}

.order {
	padding-left: 4px;
}

.icon {
	width: 1.3rem;
	padding: 2px;
	fill: #fff;
	stroke: #fff;
	margin-right: -0.2rem;
}

.link:focus {
	outline: none;	
	border-bottom: 3px solid white;
}

.link:hover {
	border-bottom: 3px solid white;
}


@media (max-width: 482px) {
	.container {
		padding: 0;
		width: 100vw;
	}
	.link {
		flex-direction: column;
		overflow: hidden;
		
		padding: 0 8px;
	}
	.icon {
		margin-right: 0;
		margin-top: 7px;
	}
	.text {
		display: none;
		max-width: 0;
	}
}
</style>